<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="Review">

	<select id="selectReviewList" parameterType="Review" resultType="_int" >
		SELECT * FROM COMPANY_REVIEW WHERE REVIEW_Company=#{cId}
	</select>
	
	<select id="selectReviewCount">
		SELECT COUNT(*) FROM COMPANY_REVIEW WHERE CMEMBERID=#{cId} 
	</select>

